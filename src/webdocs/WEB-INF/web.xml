<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

   <!--
       Here we define the users which are allowed to access JSPWiki
       editor.  Comment everything out if you want to allow everybody
       access.

       This default setup needs two roles, "admin" and "user".
       There is no real difference between these two for now.
   -->

   <security-constraint>
       <web-resource-collection>
           <web-resource-name>Protected Area</web-resource-name>
           <!-- Define the context-relative URL(s) to be protected -->
           <url-pattern>/Edit.jsp</url-pattern>
           <!-- If you list http methods, only those methods are protected -->
           <http-method>DELETE</http-method>
           <http-method>GET</http-method>
           <http-method>POST</http-method>
           <http-method>PUT</http-method>
       </web-resource-collection>

       <auth-constraint>
           <!-- Anyone with one of the listed roles may access this area -->
           <role-name>admin</role-name>
           <role-name>user</role-name>
       </auth-constraint>
   </security-constraint>



   <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>JSPWiki Editor</realm-name>
   </login-config>

</web-app>
